#!/bin/bash
# chenwu@espressif.com
set -e

TK_PATH=`realpath $0`
TK_PATH=`echo ${TK_PATH%/bin*}`
source $TK_PATH/bin/esptk-export


if [ "$1" = "-h" ]; then
    ESP_LOGB "NAME\r\n  cmm: A simple serial port logger for ESP chips with logging, reset and reconnection capabilities.\r\n"
    ESP_LOGN "  cmm : esp-logger.py on all device"
    ESP_LOGN "  cmm [x]: esp-logger.py -p /dev/ttyUSBx"
    exit
fi

function esp_cmm_one_flash()
{
    esp-logger.py -p /dev/ttyUSB$1 -s
}

function esp_cmm_all_flash()
{
    for sp in /dev/ttyUSB*
    do {
        if [ $sp == "/dev/ttyUSB*" ]; then
            ESP_LOGE "No /dev/ttyUSB* Device!"
            exit
        fi

        spcounts=`ls -al /dev/ttyUSB* | wc -l`
        if [ $spcounts -eq 1 ]; then
            esp-logger.py -s
        else
            gnome-terminal --tab -- bash -c "esp-logger.py -p $sp -s; exec bash"
        fi
    }
    done
}

if [ $# -eq 0 ]; then
    esp_cmm_all_flash
elif [ $# -eq 1 ]; then
    esp_cmm_one_flash $1
elif [ $# -gt 1 ]; then
    ESP_LOGE "unsupported parameter counts:$#, expected see 0 or 1"
fi
